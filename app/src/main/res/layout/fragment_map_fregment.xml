<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fregment.MemberComments">

  <LinearLayout
      android:orientation="vertical"
      android:weightSum="1"
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <LinearLayout
          android:padding="5dp"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              >

          <LinearLayout
              android:id="@+id/btnn"
              android:weightSum="1"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:layout_weight="0.70"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                 <ImageView
                     android:src="@drawable/profile"
                     android:layout_width="match_parent"
                     android:layout_height="65dp" />

                  <TextView
                      android:text="Mr Kumar"
                      android:textColor="#000"
                      android:gravity="center"
                      android:textSize="11dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

              </LinearLayout>

              <LinearLayout
                  android:layout_weight="0.30"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:text="If you've ever attended a corporate event, then you know the welcome speech gets all of the attention. The welcome speech is what allures."
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

              </LinearLayout>

          </LinearLayout>
          </android.support.v7.widget.CardView>



      </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          >

          <LinearLayout
              android:id="@+id/btnn1"
              android:weightSum="1"

              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:layout_weight="0.70"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:src="@drawable/profile"
                      android:layout_width="match_parent"
                      android:layout_height="65dp" />

                  <TextView
                      android:text="Mr Kumar"
                      android:textColor="#000"
                      android:gravity="center"
                      android:textSize="11dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

              </LinearLayout>

              <LinearLayout
                  android:layout_weight="0.30"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:text="If you've ever attended a corporate event, then you know the welcome speech gets all of the attention. The welcome speech is what allures."
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

              </LinearLayout>

          </LinearLayout>
      </android.support.v7.widget.CardView>
    </LinearLayout>

  </LinearLayout>

</FrameLayout>