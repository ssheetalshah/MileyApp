<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

                <LinearLayout
                    android:weightSum="1"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="15dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/pppp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/girl"
                        app:civ_border_width="1dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        app:civ_border_color="#000"/>

                    <TextView
                        android:text="Ms Soni"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Bhopal, India"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:weightSum="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.5"
                        android:text="Age: 38 year"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.5"
                        android:text="Sex: Female"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#000"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="About Us:-"
                        android:gravity="left"
                        android:textSize="12dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="The prime minister is the senior-most member of cabinet in the executive of government in a parliamentary system. The prime minister selects and can dismiss members of the cabinet; allocates posts to members within the government; and is the presiding member and chairperson of the cabinet."
                        android:gravity="left"
                        android:textSize="12dp"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            <LinearLayout
                android:id="@+id/review"
                android:background="#A0AAE2"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Rating &amp; Reviews"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

</LinearLayout>

                <LinearLayout
                    android:layout_weight="0.10"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--</android.support.v7.widget.RecyclerView>-->

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        >

                        <LinearLayout
                            android:weightSum="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_weight="0.70"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/profile_image"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:src="@drawable/girl"
                                    app:civ_border_width="1dp"
                                    android:layout_marginBottom="5dp"
                                    app:civ_border_color="#000"/>

                                <TextView
                                    android:text="Ms Alina"
                                    android:gravity="center"
                                    android:textSize="11dp"
                                    android:textColor="#000"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <RatingBar
                                    style="@style/RatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:stepSize="1.0"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:layout_gravity="center"
                                    android:rating="1.0"
                                    android:progressTint="@color/colorRating" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="0.30"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="#000"
                                    android:layout_marginBottom="3dp"
                                    android:text="New Year Celebration"
                                    android:textSize="14dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#000"
                                    android:textSize="11dp"
                                    android:layout_marginBottom="3dp"
                                    android:text="Pari chowk market"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#000"
                                    android:text="Mar 2019 23"
                                    android:textSize="11dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textColor="#000"
                                    android:text="Comment date 20 dec 2019"
                                    android:textSize="11dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />



                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>